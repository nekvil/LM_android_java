<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main</item>
        <item name="colorSecondaryVariant">@color/toolbar_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_dark</item>
        <!-- Window Background color. -->
        <item name="android:windowBackground">@color/background_dark</item>
        <!-- SearchViewStyle. -->
        <item name="searchViewStyle">@style/SearchViewMy</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="SearchViewMy" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="LineTheme" parent="Theme.LM">
        <item name="android:background">@color/black</item>
    </style>

    <style name="RecTheme" parent="Theme.LM">
        <item name="android:background" >@drawable/receiver_chat_drawable_night</item>
    </style>

    <style name="SenTheme" parent="Theme.LM">
        <item name="android:background" >@drawable/sender_chat_drawable_night</item>
    </style>

    <style name="MessageBackTheme"  parent="@android:style/Widget.EditText">
        <item name="android:background" >@drawable/message_background_night</item>
    </style>

    <style name="ChatTheme"  parent="Theme.LM">
        <item name="editTextStyle">@style/MessageBackTheme</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Auth" parent="Theme.LM">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_dark</item>
        <!-- Window Background color. -->
        <item name="android:colorBackground">@color/background_dark</item>


    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/ic_launcher_background</item>
    </style>

</resources>
